<% content_for :title, "Projects" %>

<h1 class="text-2xl font-bold mb-6"><%= controller_name.titleize %></h1>

<div class="mb-4">
  <%= link_to 'New Project', new_project_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
</div>

<% if @projects.empty? %>
  <div class="text-gray-500 italic">No projects found</div>
<% else %>
  <% @projects.each do |project| %>
    <div class="bg-white rounded shadow p-4 mb-4">
      <p><strong><%= Project.human_attribute_name(:title) %>:</strong> <%= project.title %></p>
      <p><strong><%= Project.human_attribute_name(:description) %>:</strong> <%= project.description %></p>
      <p><strong><%= Project.human_attribute_name(:manager_name) %>:</strong> <%= project.manager_name %></p>
      <p><strong><%= Project.human_attribute_name(:state) %>:</strong> <%= project.state %></p>
      <div class="mt-2 space-x-2">
        <%= link_to 'Show', project, class: "text-blue-600 hover:underline mr-2" %>
        <%= link_to 'Edit', edit_project_path(project), class: "text-yellow-600 hover:underline mr-2" %>
        <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:underline" %>
      </div>
    </div>
  <% end %>
<% end %>
