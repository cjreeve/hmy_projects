<% if project.errors.any? %>
  <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
    <h2 class="font-bold mb-2">There were errors with your submission:</h2>
    <ul class="list-disc pl-5">
      <% project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: project, local: true) do |form| %>
  <div class="space-y-4">
    <div>
      <%= form.label :title, class: "block font-medium text-gray-700 mb-1" %>
      <%= form.text_field :title, class: "block w-full border border-gray-300 rounded p-2" %>
    </div>
    <div>
      <%= form.label :description, class: "block font-medium text-gray-700 mb-1" %>
      <%= form.text_area :description, class: "block w-full border border-gray-300 rounded p-2", rows: 10 %>
    </div>
    <div>
      <%= form.label :manager_name, class: "block font-medium text-gray-700 mb-1" %>
      <%= form.text_field :manager_name, class: "block w-full border border-gray-300 rounded p-2" %>
    </div>
    <div>
      <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>
